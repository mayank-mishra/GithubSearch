<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_margin="5dp"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/row_padding"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingTop="@dimen/row_padding">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail_small"
            android:layout_height="@dimen/thumbnail_small"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@+id/phone"
            android:padding="5dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/contact_name"
            android:layout_marginLeft="5dp"
            android:text="Android Dev"
            android:textSize="@dimen/contact_name" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/thumbnail"
            android:textColor="@color/contact_number"
            android:text="Mayank"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/contact_number" />

    </RelativeLayout>
</android.support.v7.widget.CardView>